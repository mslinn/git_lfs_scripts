#!/bin/bash

function help {
  if [ "$1" ]; then echo "Error: $1"; fi
  echo "$(basename "$0") - Delete the GitHub repo for a given Git LFS evaluation scenario number.

Syntax: $(basename "$0") N
  Where N is the scenario number.
"
  exit 1
}

if [ -z "$1" ]; then help "A scenario number must be specified"; fi

gh repo delete "scenario_$1" --yes
